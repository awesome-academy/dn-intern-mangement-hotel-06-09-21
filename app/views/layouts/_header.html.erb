<header class="main-header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default bootsnav">
    <div class="container container-header">
      <div class="title col-xl-4">
        <li><%= link_to t("layouts.header.title_page"), root_path, class: "title-page" %></li>
      </div>
      <div class="collapse navbar-collapse" id="navbar-menu">
        <ul class="nav navbar-nav ml-auto" data-in="fadeInDown" data-out="fadeOutUp">
            <li class="nav-item">
              <%= link_to t("layouts.header.home"), root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("layouts.header.about"), static_pages_about_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("layouts.header.contact"), static_pages_contact_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("layouts.header.help"), static_pages_help_path, class: "nav-link" %>
            </li>
            <% if logged_in? %>
              <li>
                <%= link_to t("users.profile"), current_user, class: "nav-link" %>
              </li>
              <li>
              <%= link_to t("users.log_out"), logout_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>
              <li>
                <%= link_to t("static_pages.login"), login_path, class: "nav-link" %>
              </li>
            <% end %>            
            <li>
              <%= link_to t("users.sign_up"), signup_path, class: "nav-link" %>
            </li>
            <li>
              <%= link_to t("english"), {locale: :en}, {class: "nav-link"} %>
            </li>
            <li>
              <%= link_to t("vietnamese"), {locale: :vi}, {class: "nav-link"} %>
            </li>
        </ul>
      </div>
    </div>
  </nav>
