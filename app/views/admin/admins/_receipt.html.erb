<tr>
  <th scope="row"><%= link_to "##{index}", receipt %></th>
  <th scope="row"><%= link_to receipt.room.name, receipt.room %></th>
  <th scope="row"><%= link_to receipt.user.last_name, receipt.user %></th>
  <td><%= receipt.from_time.strftime Settings.format_time_view %></td>
  <td><%= receipt.end_time.strftime Settings.format_time_view %></td>
  <td><%= number_to_currency receipt.into_money, locale: :vi %></td>
  <td><%= number_to_currency receipt.paid, locale: :vi %></td>
  <td><%= receipt.payment %></td>
  <td class="<%= color_text receipt.status %>" style="font-weight: bold;"><%= t "receipt.status_bill.#{receipt.status}" %></td>
  <td>
    <%= link_to( t("receipt.cancel_booking"), cancel_booking_receipts_path(id: receipt.id), {data: {confirm: t("receipt.confirm_cancel")}, method: :post, remote: true, class: "mx-3"}) if receipt.wait?  %>
  </td>
</tr>
